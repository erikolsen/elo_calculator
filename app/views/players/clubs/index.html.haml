= render partial: 'players/profile_topbar'
- if @player.clubs.count > 1
  .row
    - @player.clubs.each do |club|
      .column.small-12.medium-4.large-4.left
        = link_to club, class: 'grid text-center' do
          %p.club-name
            = club.name
          %p.member-count
            Members:
            = club.players.count

- else
  .row
    .column.small-12
      .club-top-row
        %h2
          %strong
            = @player.clubs.first.name

      %table{width: '100%'}
        %thead
          %tr
            %th
              Rank
            %th
              Name
            %th
              Rating
            %th
              Won / Lost
        = render @player.clubs.first.players_by_rating
